@model List<BasketVM>
@{
    ViewData["Title"] = "ShowBasket";
}

<div class="container mt-5">
    <div class="row">
        @if (Model.Count > 0)
        {
            <table class="table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Image</th>
                        <th scope="col">Name</th>
                        <th scope="col">Price</th>
                        <th scope="col">BasketCount</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row"><img src="~/img/@item.ImageUrl" class="img-fluid rounded" width="100" height="100" /></th>
                            <td>@item.Name</td>
                            <td>@item.Price</td>
                            <td>@item.BasketCount</td>
                            <td><button class="btn btn-danger" onclick="removeFromBasket(@item.Id)">Remove</button></td>
                        </tr>
                    }
                </tbody>
            </table>

            <div class="mt-3">
                <h4>Total Price: $@Model.Sum(item => item.Price * item.BasketCount)</h4>
            </div>
        }
        else
        {
            <div class="mt-5 text-center">
                <p class="lead">Your basket is empty. Start shopping now!</p>
                <a asp-controller="home" asp-action="index" class="btn btn-primary">Go to home page</a>
            </div>
        }
    </div>
</div>
