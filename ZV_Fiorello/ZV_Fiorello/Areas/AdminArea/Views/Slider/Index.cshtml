@model List<Slider>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Slider Table</h4>
                <a class="btn btn-success" asp-controller="slider" asp-action="create">
                    Add Slider
                </a>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Settings</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td><img src="~/img/@item.ImageUrl" style="width:100px; height:100px"></td>
                                    <td>
                                        <a class="btn btn-primary" asp-controller="slider" asp-action="update" asp-route-id=@item.Id>
                                            <i class="mdi mdi-tooltip-edit"></i>
                                        </a>
                                        <a class="btn btn-danger" asp-controller="slider" asp-action="delete" asp-route-id=@item.Id>
                                            <i class="mdi mdi-delete"></i>
                                        </a>
                                        <a class="btn btn-success" asp-controller="slider" asp-action="detail" asp-route-id=@item.Id>
                                            <i class="mdi mdi-account-card-details"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>